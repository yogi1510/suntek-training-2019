\\using recursive
#include<stdio.h> 
int main() 
{ 
    int n;
    printf("enter a number");
    scanf("%d",&n);
    printf("Factorial of %d is %d", n, fact(n)); 
    return 0; 
} 
 int fact( int n) 
{ 
    if (n == 0) 
      return 1; 
    return n * fact(n - 1); 
} 


\\without function usage
#include<stdio.h> 
int main() 
{ 
    int n,i,fact=1;
    printf("enter a number");
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    fact=fact*i;
    printf("%d",fact);
    
} 
